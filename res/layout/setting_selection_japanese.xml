<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:background="#36342a">

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#f6361d"
        android:text="X"
        android:background="#36342a"
        android:textSize="20sp"
        android:paddingLeft="8dp"
        android:onClick="exitSettingSelection"/>    
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/exitButton"
        android:layout_marginTop="16dp"
        android:text="Select Challenge"
        android:textSize="28sp"
        android:textColor="#6290f8"/>        

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView1"        
        android:textSize="20sp"        
        android:text="This setting is for those who are new to Japanese and just want to practice their hiragana and katakana" />

        <Button
        android:id="@+id/topButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
    	android:layout_marginTop="8dp"
        android:layout_below="@+id/textView2"        
        android:background="@drawable/hiragana_selector"
        android:onClick="easy"
         />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/topButton"        
        android:textSize="20sp"        
        android:text="This setting is for those who are confident about their kanji skills" />
    
    <Button
        android:id="@+id/bottomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView3"        
        android:layout_centerHorizontal="true"
        android:background="@drawable/kanji_selector"
        android:onClick="medium"
         />

</RelativeLayout>